<div class="panel panel-default">

<div class="panel-body">
	<p class="panel-title instruction">Read the following sentence carefully: </p>
	<p class="well" id='question_sentence'> <%= highlight(@sentence, @question)%></p>
	<p class="instruction bold">Fill in the blank based on information conveyed in the sentence. Select all options.</p>
	<p class="well blank_sentence"><span class="arg1"> <%= @question.args[0]["text"]%><%= @question.args[0]["mention_text"]%> </span> <u><span id="blank">ssssssssssssssssss</span></u> <span class="arg2"> <%=@question.args[1]["text"] %><%= 
	@question.args[1]["mention_text"]%></span></p>

	<form action= "<%= @next_page %>" role="form" method="post">
		  <div class="form-group">	
				<div class="btn-toolbar-vertical" data-toggle="buttons">
					<% i=0 %>
					<% @question.answers.each do |opt|%>
					<label class="btn btn-primary btn-lg btn-block" id="checkboxes">
							<input type="checkbox" name="response[r<%=i%>]" value="<%=i%>"/><span id="option"><em><%= opt["relation_display_name"] %></em></span>
					</label>
					<% i=i+1 %>
					<% end %>
				</div>
			
				<div class="btn-toolbar-vertical">			
					<button type="submit" class="btn btn-primary btn-lg btn-block" name="option" value="submit">Submit</button>	
					<button type="submit" class="btn btn-danger btn-lg btn-block" name="option" value="none">None of these</button>		
				</div>		
				<input type="hidden" name="question_id" value= "<%= @question.id %>">		
			</div>
	</form>
</div>
</div>